<div class="table-responsive box-shadow">
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-xs-<%= defined?(en_col_size) ? en_col_size : 6 %>">English</th>
                <th class="col-xs-<%= defined?(en_col_size) ? es_col_size : 6 %>">Espa√±ol</th>
            </tr>
        </thead>
        <tbody>
            <% words.each do |word| %>
                <tr>
                    <td>
                        <% if word.english_prefix %><%= word.english_prefix %> <% end %>
                        <%= word.english %>
                    </td>
                    <td>
                        <%= word.spanish %>
                        <% if logged_in? && current_user.admin? %>
                            <div class="pull-right">
                                <%= link_to word, method: :delete, data: { confirm: "Are you sure?" }, :class => 'no-hover-style', :action => 'go' do %>
                                    <i class="fa fa-trash fa-fw" aria-hidden="true"></i>
                                <% end %>
                                <%= link_to edit_word_path(word), :class => 'no-hover-style', :action => 'go' do %>
                                    <i class="fa fa-pencil fa-fw" aria-hidden="true"></i>
                                <% end %>
                            </div>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
