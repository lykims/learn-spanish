<% provide(:title, @user.name) %>
<div class="page-header">
    <h1>
        <%= @user.name %>
        <% if current_user?(@user) || current_user.admin? %>
            <div class="pull-right">
                <%= link_to edit_user_path(@user), class: "btn", :action => 'go' do %>
                    Edit Profile
                <% end %>
            </div>
        <% end %>
    </h1>
</div>
<%= render 'shared/flash' %>
