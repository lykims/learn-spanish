<% provide(:title, "Sign Up") %>
<% content_for :body_class, 'splash' %>

<%= form_for(@user, url: signup_path, :html => { :class => "login-register-form"} ) do |f| %>
    <h1>Sign Up</h1>
    <%= render 'shared/error_messages' %>

    <%= f.text_field :name, class: "form-input form-control", placeholder: "Name" %>

    <%= f.text_field :username, class: "form-input form-control", placeholder: "Username"  %>

    <%= f.password_field :password, class: "form-input form-control", placeholder: "Password" %>

    <%= f.password_field :password_confirmation, class: "form-input form-control", placeholder: "Confirmation" %>

    <%= f.submit "Create", class: "btn btn-primary" %>

    <p class="message">Already registered? <%= link_to "Log In", login_path %></p>
<% end %>
