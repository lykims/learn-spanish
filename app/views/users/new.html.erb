<% provide(:title, "Sign Up") %>
<% content_for :body_class, 'splash' %>
<% content_for :main_style, 'margin:0;' %>
<% content_for :sidemenu_class, 'hidden-sm hidden-md hidden-lg' %>

<%= form_for(@user, url: signup_path, :html => { :class => "login-register-form box-shadow"} ) do |f| %>
    <h1>Sign Up</h1>
    <%= render 'shared/error_messages' %>

    <%= f.text_field :name, class: "form-input form-control form-line", placeholder: "Name" %>

    <%= f.text_field :username, class: "form-input form-control form-line", placeholder: "Username"  %>

    <%= f.password_field :password, class: "form-input form-control form-line", placeholder: "Password" %>

    <%= f.password_field :password_confirmation, class: "form-input form-control form-line", placeholder: "Confirmation" %>

    <%= f.submit "Create", class: "btn btn-primary form-line" %>

    <p class="message">Already registered? <%= link_to "Log In", login_path %></p>
<% end %>
