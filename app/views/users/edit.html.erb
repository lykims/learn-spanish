<% provide(:title, "My Profile") %>
<div class="page-header">
    <h1>My Profile</h1>
</div>
<div class="edit-profile">
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-input form-control form-line", placeholder: "Name" %>
        </div>

        <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-input form-control form-line", placeholder: "Username" %>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-input form-control form-line", placeholder: "Password" %>
        </div>

        <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, class: "form-input form-control form-line", placeholder: "Confirmation" %>
        </div>

        <%= f.submit "Save", class: "btn btn-primary form-line" %>
    <% end %>
</div>
