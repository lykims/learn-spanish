<div class="<%= content_for :sidemenu_class %>">
    <nav class="sidebar collapse" role="navigation" id="side-menu">
        <div class="sidebar-nav navbar-collapse">
            <ul class="nav">
                <li>
                    <%= active_link_to greetings_words_path, :action => 'go' do %>
                        <div class="icon"><i class="fa fa-handshake-o fa-fw" aria-hidden="true"></i></div>
                        <div class="title">Greetings</div>
                    <% end %>
                </li>
                <li>
                    <%= active_link_to questions_words_path, :action => 'go' do %>
                        <div class="icon"><i class="fa fa-question fa-fw" aria-hidden="true"></i></div>
                        <div class="title">Questions</div>
                    <% end %>
                </li>
                <li>
                    <%= active_link_to calendar_words_path, :action => 'go' do %>
                        <div class="icon"><i class="fa fa-calendar-o fa-fw" aria-hidden="true"></i></div>
                        <div class="title">Calendar</div>
                    <% end %>
                </li>
                <li>
                    <%= active_link_to numbers_words_path, :action => 'go' do %>
                        <div class="icon"><i class="fa fa-list-ol fa-fw" aria-hidden="true"></i></div>
                        <div class="title">Numbers</div>
                    <% end %>
                </li>
                <li>
                    <%= active_link_to dictionary_words_path, :action => 'go' do %>
                        <div class="icon"><i class="fa fa-book fa-fw" aria-hidden="true"></i></div>
                        <div class="title">Other Vocabulary</div>
                    <% end %>
                </li>
                <li class="hidden-sm hidden-md hidden-lg">
                    <%= active_link_to about_path, :action => 'go' do %>
                        <div class="icon"><i class="fa fa-info fa-fw" aria-hidden="true"></i></div>
                        <div class="title">About</div>
                    <% end %>
                </li>
                <% if logged_in? %>
                    <% if current_user.admin? %>
                        <li >
                            <%= active_link_to new_word_path, :action => 'go' do %>
                                <div class="icon"><i class="fa fa-pencil fa-fw" aria-hidden="true"></i></div>
                                <div class="title">Add Word</div>
                            <% end %>
                        </li>
                    <% end %>
                    <li class="hidden-sm hidden-md hidden-lg">
                        <%= active_link_to learners_path, :action => 'go' do %>
                            <div class="icon"><i class="fa fa-users fa-fw" aria-hidden="true"></i></div>
                            <div class="title">Learners</div>
                        <% end %>
                    </li>
                    <li class="hidden-sm hidden-md hidden-lg">
                        <%= active_link_to user_path(@current_user), :action => 'go' do %>
                            <div class="icon"><i class="fa fa-user-circle-o fa-fw" aria-hidden="true"></i></div>
                            <div class="title"><%= @current_user.name %></div>
                        <% end %>
                    </li>
                    <li class="hidden-sm hidden-md hidden-lg">
                        <%= active_link_to logout_path, method: "delete", :action => 'go' do %>
                            <div class="icon"><i class="fa fa-sign-out fa-fw" aria-hidden="true"></i></div>
                            <div class="title">Log Out</div>
                        <% end %>
                    </li>
                <% else %>
                    <li class="hidden-sm hidden-md hidden-lg">
                        <%= active_link_to login_path, :action => 'go' do %>
                            <div class="icon"><i class="fa fa-sign-in fa-fw" aria-hidden="true"></i></div>
                            <div class="title">Log In</div>
                        <% end %>
                    </li>
                    <li class="hidden-sm hidden-md hidden-lg">
                        <%= active_link_to signup_path, :action => 'go' do %>
                            <div class="icon"><i class="fa fa-user-plus fa-fw" aria-hidden="true"></i></div>
                            <div class="title">Sign Up</div>
                        <% end %>
                    </li>
                <% end %>
            </ul>
        </div>
    </nav>
</div>
